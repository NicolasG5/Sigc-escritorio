<Page x:Class="WPF_LoginForm.Views.FormularioUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_LoginForm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="950"
      Title="FormularioUsuarios">

    <Page.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource color3}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource color2}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource color5}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource titleColor3}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Page.Resources>

    <Border Background="{StaticResource panelColor}" CornerRadius="10">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="txtTitulo" 
                          Text="Crear Nuevo Usuario" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource titleColor1}"
                          HorizontalAlignment="Center"/>
                
                <Button Content="&lt; Volver" 
                        HorizontalAlignment="Left"
                        Background="{StaticResource color2}"
                        Style="{StaticResource ModernButton}"
                        Click="BtnVolver_Click"
                        Width="120"/>
            </Grid>

            <Separator Grid.Row="1" Margin="0,0,0,30" Background="{StaticResource color5}"/>

            <!-- FORMULARIO -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel MaxWidth="600">
                    
                    <!-- Nombre de Usuario -->
                    <TextBlock Text="Nombre de Usuario *" Style="{StaticResource LabelText}"/>
                    <TextBox x:Name="txtNombreUsuario" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>
                    
                    <!-- Email -->
                    <TextBlock Text="Email *" Style="{StaticResource LabelText}"/>
                    <TextBox x:Name="txtEmail" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>
                    
                    <!-- Contrasena -->
                    <TextBlock x:Name="lblContrasena" 
                              Text="Contrasena *" 
                              Style="{StaticResource LabelText}"/>
                    <PasswordBox x:Name="txtContrasena" 
                                Background="White"
                                Foreground="{StaticResource titleColor1}"
                                BorderBrush="{StaticResource color5}"
                                BorderThickness="1"
                                Padding="12,10"
                                FontSize="14"
                                Margin="0,0,0,20"/>
                    
                    <!-- Confirmar Contrasena -->
                    <TextBlock x:Name="lblConfirmarContrasena" 
                              Text="Confirmar Contrasena *" 
                              Style="{StaticResource LabelText}"/>
                    <PasswordBox x:Name="txtConfirmarContrasena" 
                                Background="White"
                                Foreground="{StaticResource titleColor1}"
                                BorderBrush="{StaticResource color5}"
                                BorderThickness="1"
                                Padding="12,10"
                                FontSize="14"
                                Margin="0,0,0,20"/>
                    
                    <!-- Estado -->
                    <TextBlock Text="Estado *" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cboEstado" 
                             FontSize="14"
                             Padding="12,10"
                             Margin="0,0,0,20"
                             SelectedIndex="0">
                        <ComboBoxItem Content="Activo" Tag="activo"/>
                        <ComboBoxItem Content="Inactivo" Tag="inactivo"/>
                    </ComboBox>
                    
                    <!-- Mensaje de ayuda -->
                    <Border Background="#E3F2FD" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Informacion Importante:" 
                                      FontWeight="Bold" 
                                      Foreground="#1976D2" 
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="La contrasena debe tener al menos 8 caracteres" 
                                      Foreground="#1976D2" 
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="El email debe ser valido y unico en el sistema" 
                                      Foreground="#1976D2" 
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="El nombre de usuario no puede contener espacios" 
                                      Foreground="#1976D2" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER CON BOTONES -->
            <Border Grid.Row="3" 
                    Background="{StaticResource color8}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,30,0,0">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Cancelar"
                            Background="{StaticResource color10}"
                            Style="{StaticResource ModernButton}"
                            Click="BtnCancelar_Click"
                            Width="130"
                            Margin="0,0,10,0"/>
                    
                    <Button x:Name="btnGuardar"
                            Content="Guardar Usuario"
                            Background="{StaticResource color9}"
                            Style="{StaticResource ModernButton}"
                            Click="BtnGuardar_Click"
                            Width="180"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>
