<Page x:Name="ConfirmarSolicitud_xaml" x:Class="WPF_LoginForm.Views.ConfirmarSolicitud"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_LoginForm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="950"
      Title="ConfirmarSolicitud">

    <Page.Resources>
        <!-- Estilos modernos con colores corporativos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource titleColor3}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
    </Page.Resources>

    <Border Background="{StaticResource panelColor}" CornerRadius="10">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock Text="📋 Confirmar Solicitud de Cita" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource titleColor1}"
                          HorizontalAlignment="Center"/>
                
                <Button Content="← Regresar" 
                        HorizontalAlignment="Left"
                        Background="{StaticResource color2}"
                        Style="{StaticResource ModernButton}"
                        Click="Regresar"
                        Width="120"/>
            </Grid>

            <Separator Grid.Row="1" Margin="0,15" Background="{StaticResource MediumGrayBrush}"/>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- INFORMACIÓN DEL PACIENTE -->
                    <TextBlock Text="👤 Información del Paciente" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre Completo -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Nombre Completo:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbNombrePaciente" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- RUT -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="RUT:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbRutPaciente" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Email:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbEmailPaciente" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Teléfono -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Teléfono:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbTelefonoPaciente" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN DE LA CITA -->
                    <TextBlock Text="📅 Detalles de la Cita" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Fecha -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Fecha de la Cita:" Style="{StaticResource LabelText}"/>
                                <DatePicker x:Name="dpFecha" 
                                          FontSize="14" 
                                          IsEnabled="True"/>
                            </StackPanel>

                            <!-- Hora Inicio -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Hora de Inicio:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbHoraInicio" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Hora Fin -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Hora de Fin:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbHoraFin" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Código de Confirmación -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Código de Confirmación:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbCodigoConfirmacion" 
                                       Style="{StaticResource ModernTextBox}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>

                            <!-- Motivo de Consulta -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <TextBlock Text="Motivo de Consulta:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbMotivoConsulta" 
                                       Style="{StaticResource ModernTextBox}"
                                       TextWrapping="Wrap"
                                       MinHeight="60"
                                       VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- Observaciones -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                <TextBlock Text="Observaciones:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbObservaciones" 
                                       Style="{StaticResource ModernTextBox}"
                                       TextWrapping="Wrap"
                                       MinHeight="60"
                                       VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN DEL PSICÓLOGO -->
                    <TextBlock Text="👨‍⚕️ Psicólogo Asignado" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre Psicólogo -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Nombre Completo:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbNombrePsicologo" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Título Profesional -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Título Profesional:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbTituloPsicologo" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Email Psicólogo -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Email:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbEmailPsicologo" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Teléfono Psicólogo -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Teléfono:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbTelefonoPsicologo" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN DEL SERVICIO -->
                    <TextBlock Text="💼 Servicio Solicitado" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre Servicio -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Tipo de Servicio:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbNombreServicio" 
                                       Style="{StaticResource ModernTextBox}"
                                       FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Duración -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Duración:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbDuracionServicio" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Precio -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Precio:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbPrecioServicio" 
                                       Style="{StaticResource ModernTextBox}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>

                            <!-- Estado -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Estado de la Cita:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbEstadoCita" 
                                       Style="{StaticResource ModernTextBox}"
                                       FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN ADICIONAL -->
                    <TextBlock Text="ℹ️ Información Adicional" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Fecha de Solicitud -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Fecha de Solicitud:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbFechaSolicitud" 
                                       Style="{StaticResource ModernTextBox}"
                                       Foreground="{StaticResource MediumGrayBrush}"/>
                            </StackPanel>

                            <!-- ID de Sala -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Sala Asignada:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbSala" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER CON BOTONES -->
            <Border Grid.Row="3" 
                    Background="{StaticResource color8}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mensaje informativo -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="💡 Al confirmar esta solicitud:" 
                                 FontSize="12" 
                                 Foreground="{StaticResource titleColor3}"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="• Se enviará notificación al paciente y psicólogo" 
                                 FontSize="11" 
                                 Foreground="{StaticResource MediumGrayBrush}"/>
                        <TextBlock Text="• Se creará un evento en Google Calendar" 
                                 FontSize="11" 
                                 Foreground="{StaticResource MediumGrayBrush}"/>
                        <TextBlock Text="• El estado cambiará a 'Confirmada'" 
                                 FontSize="11" 
                                 Foreground="{StaticResource MediumGrayBrush}"/>
                    </StackPanel>

                    <!-- Botón Confirmar -->
                    <Button x:Name="BtnEnviar"
                            Grid.Column="1"
                            Content="✓ Confirmar Cita"
                            Background="{StaticResource SuccessBrush}"
                            Style="{StaticResource ModernButton}"
                            Click="Enviar"
                            Width="180"
                            Height="45"
                            FontSize="16"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
