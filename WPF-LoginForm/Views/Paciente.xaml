<Page x:Class="WPF_LoginForm.Views.Paciente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_LoginForm.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="950"
      Title="Paciente">

    <Page.Resources>
        <!-- Estilos modernos con colores corporativos (igual que ConfirmarSolicitud) -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource titleColor3}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
    </Page.Resources>

    <Border Background="{StaticResource panelColor}" CornerRadius="10">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <TextBlock x:Name="Titulo"
                          Text="Gestión de Paciente"
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource titleColor1}"
                          HorizontalAlignment="Center"/>
                
                <Button x:Name="BtnRegresar"
                        Content="← Regresar" 
                        HorizontalAlignment="Left"
                        Background="{StaticResource color2}"
                        Style="{StaticResource ModernButton}"
                        Click="Regresar"
                        Width="120"/>
            </Grid>

            <Separator Grid.Row="1" Margin="0,15" Background="{StaticResource MediumGrayBrush}"/>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- DATOS PERSONALES -->
                    <TextBlock Text="📋 Datos Personales" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- RUT -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="RUT *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbRun"
                                        Style="{StaticResource ModernTextBox}"
                                        MaxLength="12"
                                        ToolTip="Formato: 12345678-9"/>
                            </StackPanel>

                            <!-- Fecha Nacimiento -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Fecha de Nacimiento *" Style="{StaticResource LabelText}"/>
                                <DatePicker x:Name="dpFechaNacimiento"
                                           Style="{StaticResource ModernDatePicker}"
                                           DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                            </StackPanel>

                            <!-- Nombres -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Nombres *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbNombre"
                                        Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Apellido Paterno -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Apellido Paterno *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbA_paterno"
                                        Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Apellido Materno -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Apellido Materno *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbA_materno"
                                        Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Género -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Género *" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="cbGenero"
                                         Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Masculino" Tag="masculino"/>
                                    <ComboBoxItem Content="Femenino" Tag="femenino"/>
                                    <ComboBoxItem Content="Otro" Tag="otro"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Estado Civil -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Estado Civil" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="cbEstadoCivil"
                                         Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Soltero/a" Tag="soltero"/>
                                    <ComboBoxItem Content="Casado/a" Tag="casado"/>
                                    <ComboBoxItem Content="Divorciado/a" Tag="divorciado"/>
                                    <ComboBoxItem Content="Viudo/a" Tag="viudo"/>
                                    <ComboBoxItem Content="Conviviente" Tag="conviviente"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Ocupación -->
                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Ocupación" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbOcupacion"
                                        Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN DE CONTACTO -->
                    <TextBlock Text="📞 Información de Contacto" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Email -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Email *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbEmail"
                                        Style="{StaticResource ModernTextBox}"
                                        ToolTip="ejemplo@correo.com"/>
                            </StackPanel>

                            <!-- Teléfono -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Teléfono *" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbTelefono"
                                        Style="{StaticResource ModernTextBox}"
                                        MaxLength="15"
                                        ToolTip="+56912345678"/>
                            </StackPanel>

                            <!-- Dirección -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <TextBlock Text="Dirección" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="tbDireccion"
                                        Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Ciudad -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Ciudad/Comuna *" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="cbCiudad"
                                         Style="{StaticResource ModernComboBox}"
                                         DisplayMemberPath="NombreCiudad"
                                         SelectedValuePath="IdCiudad"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- INFORMACIÓN MÉDICA -->
                    <TextBlock Text="🏥 Información Médica" Style="{StaticResource SectionHeader}"/>
                    <Border Background="{StaticResource color8}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Previsión -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="Previsión de Salud *" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="cbPrevision"
                                         Style="{StaticResource ModernComboBox}"
                                         DisplayMemberPath="NombrePrevision"
                                         SelectedValuePath="IdPrevision"/>
                            </StackPanel>

                            <!-- Estado -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="Estado del Paciente" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="cbEstado"
                                         Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Activo" Tag="activo" IsSelected="True"/>
                                    <ComboBoxItem Content="Inactivo" Tag="inactivo"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Consentimiento -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <CheckBox x:Name="chkConsentimiento" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="Consentimiento Informado Firmado" 
                                          Style="{StaticResource LabelText}"
                                          VerticalAlignment="Center"
                                          Margin="0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER CON BOTONES -->
            <Border Grid.Row="3" 
                    Background="{StaticResource color8}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button x:Name="BtnCrear"
                            Content="💾 Crear Paciente"
                            Background="{StaticResource SuccessBrush}"
                            Style="{StaticResource ModernButton}"
                            Click="Crear"
                            Width="180"
                            Height="45"
                            FontSize="16"
                            Margin="5"/>

                    <Button x:Name="BtnActualizar"
                            Content="✓ Actualizar"
                            Background="{StaticResource AccentBrush}"
                            Style="{StaticResource ModernButton}"
                            Click="Actualizar"
                            Width="180"
                            Height="45"
                            FontSize="16"
                            Margin="5"
                            Visibility="Hidden"/>

                    <Button x:Name="BtnEliminar"
                            Content="🗑 Eliminar"
                            Background="{StaticResource ErrorBrush}"
                            Style="{StaticResource ModernButton}"
                            Click="Eliminar"
                            Width="180"
                            Height="45"
                            FontSize="16"
                            Margin="5"
                            Visibility="Hidden"/>
                </StackPanel>
            </Border>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Grid.RowSpan="4"
                    Background="#CC000000"
                    CornerRadius="10"
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="⏳"
                              FontSize="48"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Cargando información..."
                              Foreground="White"
                              FontSize="18"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Por favor espere"
                              Foreground="#CCFFFFFF"
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>
